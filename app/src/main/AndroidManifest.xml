<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.destinyapp.mading">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.FullScreenImgActivity"
            android:theme="@style/AppThemeNoAction"></activity>
        <activity android:name=".Activity.PengumumanActivity"
            android:label="Seluruh Pengumuman"
            android:parentActivityName=".Activity.PengumumanLimitActivity"/>
        <activity android:name=".Activity.PengumumanLimitActivity"
            android:label="Pengumuman"
            android:parentActivityName=".Activity.MainActivity"/>
        <activity
            android:name=".Activity.DetailBerita"
            android:label="Detail Berita"
            android:parentActivityName=".Activity.BeritaActivity" />
        <activity
            android:name=".Activity.ListPelajaranDetailActivity"
            android:parentActivityName=".Activity.PelajaranActivity" />
        <activity
            android:name=".Activity.BeritaLimitActivity"
            android:label="Berita"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.About.AboutActivity"
            android:label="Tentang Developer"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.UjianActivity"
            android:label="Jadwal Ujian"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.PelajaranActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.BeritaActivity"
            android:label="Seluruh Berita"
            android:parentActivityName=".Activity.BeritaLimitActivity" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/AppThemeNoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>