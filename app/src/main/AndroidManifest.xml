<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.destinyapp.mading">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.About.AboutActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="Tentang Developer"></activity>
        <activity
            android:name=".Activity.UjianActivity"
            android:label="Jadwal Ujian"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.PelajaranActivity"
            android:label="Jadwal Pelajaran"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.BeritaActivity"
            android:label="Berita"
            android:parentActivityName=".Activity.MainActivity" />
        <activity android:name=".Activity.MainActivity"
            android:theme="@style/AppThemeNoAction"/>
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/AppThemeNoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>